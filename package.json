{
  "name": "nebula-browser",
  "version": "0.1.0",
  "description": "A minimal, privacy-focused desktop web browser",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "build": {
    "appId": "com.nebula.browser",
    "productName": "NebulaBrowser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
  "target": "dmg",
  "identity": null
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^10.0.0",
    "electron": "^28.3.2",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "electron-store": "^8.0.0",
    "react": "^18.0.0",
  "react-dom": "^18.0.0",
  "@cliqz/adblocker-electron": "^1.34.0",
  "cross-fetch": "^3.1.5"
  },
  "keywords": [
    "browser",
    "privacy",
    "electron",
    "web-browser",
    "ad-blocker"
  ],
  "author": "Your Name",
  "license": "MIT"
}
